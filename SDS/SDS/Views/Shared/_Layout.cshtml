<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] Safety Data Sheet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        body {
            margin: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
        }


        .wrapper {
            display: flex;
            flex: 1 1 auto;
            overflow: hidden;
            margin-top: 56px;
        }

        .sidebar {
            width: 220px;
            background-color: #f8f9fa;
            border-right: 1px solid #dee2e6;
            padding-top: 1rem;
            flex-shrink: 0;
            height: calc(100vh - 56px); /* full height minus navbar */
            position: fixed;
            top: 56px;
            left: 0;
            overflow-y: auto;
        }

        .sidebar a {
            display: block;
            padding: 0.75rem 1.25rem;
            color: #212529;
            text-decoration: none;
            font-weight: 500;
            margin: 0;
            border-left: 4px solid transparent;
            transition: background-color 0.15s ease, border-color 0.15s ease;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background-color: #e9ecef;
            color: #0d6efd;
            border-left-color: #0d6efd;
            text-decoration: none;
        }

        .content {
            margin-left: 220px;
            padding: 1.5rem 2rem;
            flex-grow: 1;
            overflow-y: auto;
            min-height: calc(100vh - 56px);
            background-color: #fff;
        }


        .navbar {
            padding: 0.5rem 1rem;
        }

        .navbar-brand {
            font-weight: 700;
            font-size: 1.25rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom fixed-top shadow-sm">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Safety Data Sheet</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#topNavbar" aria-controls="topNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="topNavbar">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="wrapper">
        <!-- Sidebar -->
        <nav class="sidebar" aria-label="Main navigation">
            <a asp-area="" asp-controller="SafetyDataSheet" asp-action="Index" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                Product List
            </a>
            <a asp-area="" asp-controller="SafetyDataSheet" asp-action="Create" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "Create" ? "active" : "")">
                New Product
            </a>
            <a asp-area="" asp-controller="GeneratePdf" asp-action="Index" class="@(ViewContext.RouteData.Values["action"]?.ToString() == "GeneratePdf" ? "active" : "")">
                PDF View
            </a>
        </nav>

        <!-- Main content -->
        <main class="content" role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
